<%= form_with(model: unavailability, local: true) do |form| %>
  <% if unavailability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(unavailability.errors.count, "error") %> prohibited this unavailability from being saved:</h2>

      <ul>
      <% unavailability.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :slot %>
    <%= form.select :slot, options_for_select(Appointment::SLOT), {}, prompt: "Select a slot", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date ,:size=>"40", :id=>"datepicker" , class: "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script>
  $(document).ready(function () {
    $(function(){
      $( "#datepicker" ).datepicker({
        dateFormat: 'yy-mm-dd',
        minDate: 0
      });
    });
  });
</script>
