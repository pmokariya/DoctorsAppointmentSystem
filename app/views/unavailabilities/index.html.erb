<div class="container">
  <center><h2>Unavailabilities</h2></center>
    <% if current_doctor %>
      <%= link_to 'New Unavailability', new_unavailability_path ,:style=>"margin-bottom: 15px;",:class=>"pull-right btn btn-info"%>
    <% end %>
    <br>
    <br>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Slot</th>
          <th>Date</th>
          <th colspan="3">Show link</th>
        </tr>
      </thead>
      <tbody>
        <% @unavailabilities.each do |unavailability| %>
          <tr>
            <td><%= unavailability.slot %></td>
            <td><%= unavailability.date %></td>
            <td>
              <%= link_to 'Show', unavailability %>
              <%= link_to 'Edit', edit_unavailability_path(unavailability) %>
              <%= link_to 'Destroy', unavailability, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
